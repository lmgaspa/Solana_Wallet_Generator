{
  "openapi": "3.0.0",
  "info": {
    "version": "1.0.0",
    "title": "Diana Exchange API",
    "description": "API para geração e persistência de endereços BTC, DOGE, SOL e DianaCoin"
  },
  "servers": [
    { "url": "https://apilogin-m87n.onrender.com/api" }
  ],
  "paths": {
    "/addresses/{coin}": {
      "post": {
        "summary": "Cria/retorna endereço por moeda",
        "parameters": [
          {
            "name": "coin",
            "in": "path",
            "required": true,
            "schema": { "type": "string", "enum": ["btc", "doge", "sol", "diana"] }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "type": "object", "properties": { "userId": { "type": "string" } }, "required": ["userId"] }
            }
          }
        },
        "responses": {
          "200": { "description": "Endereço já existente" },
          "201": { "description": "Endereço criado" },
          "400": { "description": "Erro de entrada" },
          "500": { "description": "Erro interno" }
        }
      }
    }
  }
}
